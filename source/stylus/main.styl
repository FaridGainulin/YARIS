@font-face
  font-family 'Manrope-Bold'
  src url('../fonts/Manrope-Bold.woff'), url('../fonts/Manrope-Bold.woff2')
  font-display swap
@font-face
  font-family 'Manrope-Light'
  src url('../fonts/Manrope-Light.woff'), url('../fonts/Manrope-Light.woff2')
  font-display swap
@font-face
  font-family 'Manrope-Regular'
  src url('../fonts/Manrope-Regular.woff'), url('../fonts/Manrope-Regular.woff2')
  font-display swap
@font-face
  font-family 'Manrope-SemiBold'
  src url('../fonts/Manrope-SemiBold.woff'), url('../fonts/Manrope-SemiBold.woff2')
  font-display swap

@font-face
  font-family 'Inter-Medium'
  src url('../fonts/Inter-Medium.woff'), url('../fonts/Inter-Medium.woff2')
  font-display swap

@font-face
  font-family 'SimphoniaDeco-Regular'
  src url('../fonts/SimphoniaDeco-Regular.woff'), url('../fonts/SimphoniaDeco-Regular.woff2')
  font-display swap


@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin 0 auto
  font-size 18px
  font-family 'Manrope-Regular'
  font-weight 400
  line-height 120%
  color $color-white

.layout
  width 100%
  height 100%
  margin 0 auto
  display flex
  flex-direction column
  overflow-x hidden
.main
  flex 1

.wrapper
  max-width 320px
  margin 0 auto
  padding 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width 750px
    padding 0 12px
  +above($breakpoints.md)
    max-width 996px
    padding 0 15px
  +above($breakpoints.xxl)
    padding 0 20px
    max-width 1220px
