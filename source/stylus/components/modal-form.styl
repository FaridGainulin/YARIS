.form-modal
  &__feedback
    position relative
    border-radius: 10px;
    color: #fff
    padding: 12px
    background: #454662
    box-shadow: 0px 2px 20px 0px #454662
    border 5px solid #3C3E5B
    +above($breakpoints.sm)
      border 7px solid #3C3E5B
    +above($breakpoints.md)
      border 9px solid #3C3E5B
    +above($breakpoints.xxl)
      border 11px solid #3C3E5B


  &__wrapper
    // border 1px solid #AD8E67
    padding 10px
    border-radius: 15px;
    +above($breakpoints.sm)
      padding 15px
    +above($breakpoints.xxl)
      padding: 20px

  &__info-title
    font-size: 23px;
    margin: 0 0 18px 0
    font-family: 'SimphoniaDeco-Regular'
    font-weight: 400
    line-height 120%
    +above($breakpoints.sm)
      font-size: 24px
    +above($breakpoints.md)
      line-height 114%
      font-size: 26px
      margin: 0 0 40px 0
    +above($breakpoints.xxl)
      font-size: 30px
    br
      display: block

  &__feedback-item
    max-width: 255px
    margin: 0 auto
    +above($breakpoints.sm)
      max-width: 280px
    +above($breakpoints.xxl)
      max-width: 343px

  &__feedback-input
    height: 45px
    margin-bottom: 10px
    +above($breakpoints.sm)
      height: 50px
      margin-bottom: 15px
    +above($breakpoints.md)
      height: 55px
    +above($breakpoints.xxl)
      height: 60px
      margin-bottom: 20px
    .input
      &__field
        height: 100%
        border: none

  &__button
    margin-bottom: 20px
    .btn
      height: 45px
      font-size: 12px !important
      +above($breakpoints.sm)
        font-size: 14px !important
        height: 50px
      +above($breakpoints.md)
        font-size: 15px !important
        height: 55px
      +above($breakpoints.xxl)
        font-size: 16px !important
        height: 60px

  &__agree
    font-size: 10px;
    line-height: 13px;
    font-family: 'Manrope-Light'
    position relative
    +above($breakpoints.sm)
      font-size: 11px;
      line-height: 13px;
    +above($breakpoints.md)
      font-size: 11px;
      line-height: 14px;
    +above($breakpoints.xxl)
      font-size: 13px;
      line-height: 15px;
    a
      text-decoration: underline
