.invest-section
  background-image: url('../images/invest-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #FBFBFB

  &__container
    position relative
    z-index 1
    text-align: center
    padding 20px 0 5px
    +above($breakpoints.sm)
      padding 50px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 120px 0

  &__title,
  &__sub-title
    color: $color-blue

  &__sub-title
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 15px 0 40px
    +above($breakpoints.md)
      padding 18px 0 50px
    +above($breakpoints.xxl)
      padding 20px 0 60px

  &__cards
    +above($breakpoints.sm)
      display: flex
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    height: 120px
    border-radius: 8px
    display: flex
    flex-direction: column
    justify-content center
    align-items: center
    gap: 15px
    background-color #454662
    border: 4px solid #3C3E5B
    +above($breakpoints.sm)
      border: 6px solid #3C3E5B
      gap: 20px
      border-radius: 12px
      width 235px !important
      height: 235px
    +above($breakpoints.md)
      border: 8px solid #3C3E5B
      gap: 30px
      border-radius: 16px
      width 308px !important
      height: 308px
    +above($breakpoints.xxl)
      border: 11px solid #3C3E5B
      border-radius: 20px
      gap: 40px
      width 380px !important
      height: 380px

  &__btn
    width 220px !important
    +above($breakpoints.sm)
      width 180px !important
    +above($breakpoints.md)
      width 240px !important
    +above($breakpoints.xxl)
      width 282px !important

  &__img
    position: absolute
    z-index -1
    width: 170px;
    height: auto;
    top: 20px;
    right: -104px;
    +above($breakpoints.sm)
      width: 396px;
      top: 20px;
      right: -181px;
    +above($breakpoints.md)
      width: 521px;
      top: 25px;
      right: -239px;
    +above($breakpoints.xxl)
      width 656px
      top: 51px
      right: -303px
