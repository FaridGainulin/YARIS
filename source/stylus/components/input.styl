.input
  height: 40px
  width 100%
  padding: 0 19px;
  font-family: 'Manrope-Regular'
  font-weight: 400
  font-size: 14px;
  line-height: 110%
  color: rgba(0, 0, 0, 0.5)
  border: 1px solid #fff
  border-radius: 5px;
  background: #fff
  position relative
  overflow hidden

  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s
  &:hover
    border 1px solid #FFD166
  &:focus
    color: #272838
    caret-color: #FFB200
    border 1px solid #FFD166
    box-shadow: 3px 3px 8px 0px #FFD166
    background: #fff
    &::placeholder
      color: rgba(0, 0, 0, 0.5)
  &::placeholder
    color: rgba(0, 0, 0, 0.5)
  +above($breakpoints.sm)
    padding: 0 15px;
    font-size: 14px;
    height: 45px
  +above($breakpoints.md)
    padding: 0 17px;
    font-size: 16px;
    height: 50px
  +above($breakpoints.xxl)
    padding: 0 19px;
    font-size: 18px;
    height: 56px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    background: #fff
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--textarea
    outline none
    padding: 10px 10px 10px 19px
    resize: none
    height: 70px
    width 280px
    +above($breakpoints.sm)
      padding: 15px 10px 10px 15px
      width 188px
      height: 147px
    +above($breakpoints.md)
      padding: 17px 10px 10px 17px
      width 230px
      height: 166px;
    +above($breakpoints.xxl)
      padding: 19px 10px 10px 19px
      width 282px
      height: 188px
