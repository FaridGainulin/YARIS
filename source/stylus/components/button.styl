.btn
  height: 40px
  width 100%
  user-select: none
  position: relative
  display: flex;
  justify-content: center
  align-items: center
  overflow: hidden
  color: #3A2E14
  border-radius: 5px
  box-shadow: inset 0 -2px 0 0 rgba(0, 0, 0, 0.25);
  background: linear-gradient(90deg, #ffd166 0%, #ffb200 100%);
  text-transform: uppercase
  font-family: 'Manrope-Bold'
  font-weight: 700
  font-size: 14px
  line-height: 110%
  transition transform 0.5s, top 0.8s
  +above($breakpoints.sm)
    font-size: 14px;
    height: 45px;
  +above($breakpoints.md)
    font-size: 16px;
    height: 50px;
  +above($breakpoints.xxl)
    font-size: 18px;
    height: 56px

  &:hover
    transform: scale(1.02)

  &:active
    top: 3px

  &::before
    content: ""
    position: absolute
    top: 0;
    height: 100%;
    width: 36px;
    transform: skewX(-45deg)
    left: -150%
    pointer-events: none
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.4));
    animation: flareAnimation 4s infinite ease-in;
    vendord = official
    @keyframes flareAnimation
      0%
          left: -150%
      100% 
          left: 250%
