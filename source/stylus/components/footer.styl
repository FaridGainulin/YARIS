.footer
  background-color: #fff

  &__container
    display: flex
    align-items: center
    flex-direction: column
    color: $color-blue
    gap: 10px
    padding 15px 0
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      padding 20px 0
    +above($breakpoints.md)
      padding 25px 0
    +above($breakpoints.xxl)
      padding 30px 0 29px

  &__block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 18px

  &__logo
    width 105px
    height: 29px
    +above($breakpoints.sm)
      width 140px
      height: 38px
    +above($breakpoints.md)
      width 160px
      height: 43px
    +above($breakpoints.xxl)
      width 182px
      height: 49px
    path
      fill: $color-blue

  &__brand
    display: none
    +above($breakpoints.sm)
      display: block

  &__privacy
    cursor pointer
    text-decoration: underline

  &__connection
    display: flex
    flex-direction: column
    align-items: flex-end
    +above($breakpoints.sm)
      gap: 3px
    +above($breakpoints.md)
      gap: 4px
    +above($breakpoints.xxl)
      gap: 5px

  &__connection-phone
    display: flex
    align-items: center
    gap: 8px
    +above($breakpoints.sm)
      gap: 12px
    +above($breakpoints.md)
      gap: 14px
    +above($breakpoints.xxl)
      gap: 16px

  &__connection-icon
    width 10px
    height: 10px
    +above($breakpoints.sm)
      width 12px
      height: 12px
    +above($breakpoints.md)
      width 13px
      height: 13px
    +above($breakpoints.xxl)
      width 14px
      height: 14px
    path
      fill: #3C3E5B

  &__call-me
    display: none
    +above($breakpoints.sm)
      display: block
      position relative
      transition transform 0.5s, top 0.8s
      cursor pointer
      text-decoration: underline
      color: #3C3E5B
      &:hover
        transform: scale(1.02)
      &:active
        top: 3px
