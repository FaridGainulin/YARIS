.finances-section
  background-image: url('../images/finances-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #FBFBFB

  &__container
    position relative
    z-index 1
    padding 20px 0
    +above($breakpoints.sm)
      padding 70px 0
    +above($breakpoints.md)
      padding 90px 0
    +above($breakpoints.xxl)
      padding 120px 0

  &__img
    position: absolute
    z-index -1
    width: 150px;
    height: auto;
    bottom: 268px;
    left: 17px;
    +above($breakpoints.sm)
      width: 265px;
      bottom: 281px;
      left: 0
    +above($breakpoints.md)
      width: 330px;
      bottom: 363px;
    +above($breakpoints.xxl)
      width 409px
      bottom: 468px

  &__icon
    position: absolute
    z-index -1
    width: 70px;
    height: 70px;
    top: 76px;
    right: -16px;
    +above($breakpoints.sm)
      width: 110px;
      height: 110px;
      top: 131px;
      right: -43px;
    +above($breakpoints.md)
      width: 140px;
      height: 140px;
      top: 173px;
      right: -55px;
    +above($breakpoints.xxl)
      width 160px
      height: 160px
      top: 227px
      right: -61px

  &__box
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-start
      justify-content space-between

  &__box-text
    +above($breakpoints.sm)
      flex-shrink: 0
      width max-content

  &__title,
  &__sub-title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__sub-title
    position relative
    z-index 1
    color: #454662
    padding-top 10px
    +above($breakpoints.sm)
      padding-top 11px
    +above($breakpoints.md)
      padding-top 12px
    +above($breakpoints.xxl)
      padding-top 14px
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color #FFD166
      border-radius: 3px
      width: 174px;
      height: 20px;
      top: 6px;
      left: 67px;
      +above($breakpoints.sm)
        border-radius: 10px
        width: 294px;
        height: 38px;
        top: 3px;
        left: -6px;
      +above($breakpoints.md)
        width: 323px;
        height: 45px;
        top: 0;
        left: -7px;
      +above($breakpoints.xxl)
        width 401px
        height: 58px
        top: 0
        left: -8px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content flex-end
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    position relative
    z-index 1
    width 280px !important
    height: 90px
    background-color #fff
    color: $color-blue
    display: flex
    flex-direction: column
    justify-content center
    align-items: center
    text-align: center
    border-radius: 8px
    gap: 8px
    +above($breakpoints.sm)
      gap: 12px
      border-radius: 12px
      width 200px !important
      height: 107px
    +above($breakpoints.md)
      gap: 16px
      border-radius: 16px
      width: 273px !important;
      height: 136px
    +above($breakpoints.xxl)
      gap: 20px
      border-radius: 20px
      width 330px !important
      height: 170px
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color #454662
      top: 43%
      left: 50%
      transform: translate(-50%, -50%)
      width 25px
      height: 1px
      +above($breakpoints.sm)
        height: 2px
        top: 50%
        width 30px
      +above($breakpoints.md)
        width 35px
      +above($breakpoints.xxl)
        width 40px

  &__card-title
    color: #454662

  &__bottom
    width 100%
    background-color $color-blue
    text-align: center
    border-radius: 8px
    padding 15px 10px
    margin-top 64px
    display: flex
    flex-direction: column
    align-items: center
    gap: 7px
    +above($breakpoints.sm)
      width max-content
      margin 30px auto 0
      border-radius: 12px
      padding 25px 40px
    +above($breakpoints.md)
      gap: 16px
      margin 45px auto 0
      border-radius: 16px
      padding 35px 60px
    +above($breakpoints.xxl)
      gap: 20px
      margin 60px auto 0
      border-radius: 20px
      width 1040px
      height: 288px
      padding 49px 87px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
      gap: 6px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 10px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 188px !important
      +above($breakpoints.md)
        width 230px !important
      +above($breakpoints.xxl)
        width 282px !important

  &__agree-wrapper
    +above($breakpoints.xxl)
      margin-top 4px
